doctype html
div(layout='vertical', layout-fill)
  section(layout='horizontal', flex)
    md-sidenav.md-sidenav-left.md-whiteframe-z2(layout='vertical')
      md-content.md-theme-yellow
        h3.marginLittle.center-text Bearded Avenger
        h4.marginLittle.center-text LeaderBoard
          
      md-content.dark-content(flex)
        br
        md-item-content(ng-repeat = "user in users | orderBy:'experience':true" )
          div.marginCard(layout='row')
            img.borderRadius(ng-src = '{{user.avatar}}')
            p &nbsp
            div(layout='vertical')
              h4.marginLittle.whiteText(
                ng-bind = '"   " + user.username ' 
              )
              md-progress-linear.venga(
                md-mode='determinate', 
                value='{{user.experience * 100 / user.nextLevel}}',
                ng-class = '{"greenBar": user.team === "green", "redBar": user.team === "red" }'
              )
              h5.marginLittle( ng-bind = '"Nv:" + user.level + "   Exp " + user.experience ')
    md-content(flex)
      #map
        
