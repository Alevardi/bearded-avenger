doctype html
html(
  ng-app = 'bearded-avenger'
  ng-controller = 'MainController'
)
  head
    meta(charset = 'utf-8')
    meta(
      http-equiv = 'X-UA-Compatible'
      content = 'IE=edge'
    )
    meta(
      name = 'viewport'
      content = 'width=device-width, initial-scale=1.0'
    )

    base(href = '/')
    title Bearded Avenger
    
    link(href = 'http://fonts.googleapis.com/css?family=Roboto:400,400italic,500,500italic,700,700italic,900,900italic,300italic,300'
      rel =  'stylesheet'
      type = 'text/css'
    )
    link(href = 'http://fonts.googleapis.com/css?family=Roboto+Slab:400,700,300,100'
      rel = 'stylesheet'
      type =  'text/css '
    )
    link(href = 'http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css', rel = 'stylesheet')

    link(
      rel = 'stylesheet'
      href = '/css/app.css'
    )

  body
    header
      include partials/main_navbar

    div(ng-view)
    
    include partials/footer

    script(src = '/js/app.min.js')
    
